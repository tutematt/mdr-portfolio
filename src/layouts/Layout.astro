---
// src/layouts/Layout.astro
import SEO from '../components/SEO.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  lang?: 'es' | 'en';
  keywords?: string[];
}

const { 
  title, 
  description = 'Portfolio profesional de desarrollador Full Stack',
  lang = 'es',
  keywords = ['developer', 'portfolio', 'full stack', 'react', 'node.js', 'project manager']
} = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <SEO 
      title={title}
      description={description}
      lang={lang}
      keywords={keywords}
    />
  </head>
  <body>
    <slot />
  </body>
</html>