---
// src/components/SkillCategory.astro
import type { SkillCategory } from '../data/portfolio';

interface Props {
  category: SkillCategory;
  lang: 'es' | 'en';
}

const { category, lang } = Astro.props;
---

<article class="skill-category">
  <h3 class="skill-category-title">
    <span class="category-icon" aria-hidden="true">{category.icon}</span>
    {category.title[lang]}
  </h3>
  
  <div class="skills-grid">
    {category.skills.map(skill => (
      <div 
        class="skill-chip"
        style={skill.color ? `--skill-color: ${skill.color}` : ''}
      >
        <span class="skill-icon" aria-hidden="true">{skill.icon}</span>
        <span class="skill-name">{skill.name}</span>
      </div>
    ))}
  </div>
</article>

<style>
  .skill-category {
    background: var(--bg-terminal);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 24px;
  }

  .skill-category-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-white);
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 8px;
    padding-bottom: 12px;
    border-bottom: 2px solid var(--border-color);
  }

  .category-icon {
    font-size: 1.5rem;
  }

  /* Nuevo dise√±o de grid para skills */
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 12px;
  }

  .skill-chip {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 12px 16px;
    background: var(--bg-terminal);
    border: 2px solid var(--border-color);
    border-radius: 8px;
    transition: all 0.3s ease;
    cursor: default;
    position: relative;
    overflow: hidden;
  }

  /* Efecto hover con gradiente */
  .skill-chip::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, transparent 0%, var(--skill-color, var(--text-primary)) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 0;
  }

  .skill-chip:hover::before {
    opacity: 0.1;
  }

  .skill-chip:hover {
    border-color: var(--skill-color, var(--text-primary));
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(0, 255, 159, 0.15);
  }

  .skill-icon {
    font-size: 1.5rem;
    line-height: 1;
    flex-shrink: 0;
    z-index: 1;
  }

  .skill-name {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-white);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    z-index: 1;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .skills-grid {
      grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
    }

    .skill-chip {
      padding: 10px 12px;
      gap: 8px;
    }

    .skill-icon {
      font-size: 1.25rem;
    }

    .skill-name {
      font-size: 0.8rem;
    }
  }

  @media (max-width: 480px) {
    .skills-grid {
      grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
      gap: 10px;
    }

    .skill-chip {
      flex-direction: column;
      text-align: center;
      padding: 12px 8px;
      gap: 6px;
    }

    .skill-name {
      font-size: 0.75rem;
    }
  }
</style>