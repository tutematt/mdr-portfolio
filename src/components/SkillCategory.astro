---
// src/components/SkillCategory.astro
import type { SkillCategory } from '../data/portfolio';

interface Props {
  category: SkillCategory;
  lang: 'es' | 'en';
}

const { category, lang } = Astro.props;
---

<article class="skill-category">
  <h3 class="skill-category-title">
    <span class="category-icon" aria-hidden="true">{category.icon}</span>
    {category.title[lang]}
  </h3>
  
  <div class="skill-items">
    {category.skills.map(skill => (
      <div class="skill-item">
        <div class="skill-header">
          <span class="skill-name">{skill.name}</span>
          <span class="skill-percentage" aria-label={`${skill.level}%`}>
            {skill.level}%
          </span>
        </div>
        <div class="skill-bar" role="progressbar" aria-valuenow={skill.level} aria-valuemin="0" aria-valuemax="100">
          <div class="skill-progress" style={`width: ${skill.level}%`}></div>
        </div>
      </div>
    ))}
  </div>
</article>

<style>
  .skill-category {
    background: var(--bg-terminal);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 24px;
  }

  .skill-category-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-white);
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .category-icon {
    font-size: 1.5rem;
  }

  .skill-items {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .skill-item {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .skill-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .skill-name {
    color: var(--text-white);
    font-size: 0.875rem;
    font-weight: 500;
  }

  .skill-percentage {
    color: var(--text-muted);
    font-size: 0.75rem;
    font-weight: 600;
  }

  .skill-bar {
    width: 100%;
    height: 8px;
    background: var(--bg-primary);
    border-radius: 4px;
    overflow: hidden;
  }

  .skill-progress {
    height: 100%;
    background: linear-gradient(90deg, var(--text-primary), var(--accent-cyan));
    transition: width 0.5s ease;
    border-radius: 4px;
  }
</style>