---
// src/components/PortfolioFooter.astro

interface Props {
  lang: 'es' | 'en';
}

const { lang } = Astro.props;
const year = new Date().getFullYear();

const text = {
  madeWith: lang === 'es' ? 'Hecho con' : 'Made with',
  rights: lang === 'es' ? 'Todos los derechos reservados' : 'All rights reserved'
};
---

<footer class="portfolio-footer">
  <div class="footer-content">
    <p class="footer-text">
      <span class="text-muted" aria-hidden="true">// </span>
      <span class="text-primary">{text.madeWith}</span> 
      <span class="text-cyan" aria-hidden="true"> &lt;code/&gt;</span>
      <span class="text-primary"> {lang === 'es' ? 'y' : 'and'}</span>
      <span class="text-cyan" aria-hidden="true"> ♥</span>
    </p>
    <p class="footer-copyright">
      <span class="text-muted">© {year} - {text.rights}</span>
    </p>
  </div>
</footer>

<style>
  .portfolio-footer {
    margin-top: 64px;
    padding-top: 32px;
    border-top: 1px solid var(--border-color);
  }

  .footer-content {
    text-align: center;
  }

  .footer-text {
    font-size: 1rem;
    margin-bottom: 8px;
  }

  .footer-copyright {
    font-size: 0.875rem;
  }

  .text-primary {
    color: var(--text-primary);
  }

  .text-cyan {
    color: var(--accent-cyan);
  }

  .text-muted {
    color: var(--text-muted);
  }

  @media (max-width: 768px) {
    .portfolio-footer {
      margin-top: 48px;
      padding-top: 24px;
    }
  }
</style>