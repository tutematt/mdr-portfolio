---
// src/components/AboutSection.astro
interface AboutContent {
  greeting: string;
  intro: string;
  expertise: string;
  approach: string;
  passion: string;
}

interface Props {
  about: AboutContent;
}

const { about } = Astro.props;
---

<div class="about-content">
  <p class="about-greeting">{about.greeting}</p>
  
  <p class="about-intro">{about.intro}</p>
  
  <div class="about-highlight">
    <span class="highlight-icon" aria-hidden="true">ðŸ’¡</span>
    <p class="about-expertise">{about.expertise}</p>
  </div>
  
  <p class="about-approach">{about.approach}</p>
  
  <div class="about-passion">
    <span class="passion-icon" aria-hidden="true">ðŸš€</span>
    <p>{about.passion}</p>
  </div>
</div>

<style>
  .about-content {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .about-greeting {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0;
  }

  .about-intro {
    font-size: 1.125rem;
    color: var(--text-white);
    font-weight: 500;
    line-height: 1.7;
    margin: 0;
  }

  .about-highlight {
    display: flex;
    gap: 16px;
    padding: 20px;
    background: var(--bg-terminal);
    border-left: 4px solid var(--text-primary);
    border-radius: 8px;
    margin: 8px 0;
  }

  .highlight-icon {
    font-size: 2rem;
    flex-shrink: 0;
    line-height: 1;
  }

  .about-expertise {
    margin: 0;
    color: var(--text-white);
    line-height: 1.7;
  }

  .about-approach {
    color: var(--text-secondary);
    line-height: 1.7;
    margin: 0;
  }

  .about-passion {
    display: flex;
    gap: 16px;
    align-items: flex-start;
    padding: 16px 20px;
    background: linear-gradient(135deg, rgba(0, 255, 159, 0.05) 0%, transparent 100%);
    border-radius: 8px;
    border: 1px solid rgba(0, 255, 159, 0.1);
  }

  .passion-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .about-passion p {
    margin: 0;
    color: var(--text-secondary);
    line-height: 1.7;
  }

  @media (max-width: 768px) {
    .about-greeting {
      font-size: 1.25rem;
    }

    .about-intro {
      font-size: 1rem;
    }

    .about-highlight,
    .about-passion {
      padding: 16px;
      gap: 12px;
    }

    .highlight-icon {
      font-size: 1.5rem;
    }
  }
</style>